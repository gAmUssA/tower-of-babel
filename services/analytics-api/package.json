{
  "name": "analytics-api",
  "version": "0.1.0",
  "description": "Analytics API for Kafka Schema Registry Demo",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run copy-public",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "generate-types": "node src/scripts/generate-types.js",
    "prebuild": "npm run generate-types",
    "copy-public": "mkdir -p dist/public && cp -r src/public/* dist/public/"
  },
  "keywords": [
    "kafka",
    "schema-registry",
    "avro",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@kafkajs/confluent-schema-registry": "^3.3.0",
    "avro-typescript": "^1.0.4",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "kafkajs": "^2.2.4",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.0.0",
    "@types/socket.io": "^3.0.1",
    "jest": "^30.0.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
